@using WEB.Models
@model List<GioHang>
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_LayoutCheckout.cshtml";
}
<section class="py-5">
    <!-- BILLING ADDRESS-->
    <h2 class="h5 text-uppercase mb-4">Billing details</h2>
    <div class="row">
        <div class="col-lg-8">
            <form action="#">
                <div class="row gy-3">
                    <div class="col-lg-6">
                        <label class="form-label text-sm text-uppercase" for="firstName">Họ tên khách hàng </label>
                        <input class="form-control form-control-lg" type="text" id="firstName" value="@ViewBag.TenKH">
                    </div>
                    <div class="col-lg-6">
                        <label class="form-label text-sm text-uppercase" for="lastName">Email </label>
                        <input class="form-control form-control-lg" type="email" id="email" value="@ViewBag.Email">
                    </div>
                    <div class="col-lg-6">
                        <label class="form-label text-sm text-uppercase" for="email">Số điện thoại </label>
                        <input class="form-control form-control-lg" type="tel" id="phone" value="@ViewBag.SDT">
                    </div>
                    <div class="col-lg-6">
                        <label class="form-label text-sm text-uppercase" for="phone">Ngày đặt hàng </label>
                        <input class="form-control form-control-lg" type="date" id="phone" value="@ViewBag.NgayDat">
                    </div>
                    <div class="col-lg-12">
                        <label class="form-label text-sm text-uppercase" for="company">Địa chỉ </label>
                        <input class="form-control form-control-lg" type="text" id="address" value="@ViewBag.DiaChi">
                    </div>

                    <div class="col-lg-12 form-group">
                        <input class="btn btn-dark" type="submit" value="Đặt hàng"/>
                    </div>
                </div>
            </form>
        </div>
        <!-- ORDER SUMMARY-->
        
            <div class="col-lg-4">
                <div class="card border-0 rounded-0 p-lg-4 bg-light">
                    <div class="card-body">
                        <h5 class="text-uppercase mb-4">Your order</h5>
                        <ul class="list-unstyled mb-0">
                            @foreach (var sp in Model)
                            {
                                <li class="d-flex align-items-center justify-content-between"><strong class="small fw-bold">@sp.SoLuong x @sp.TenSP</strong><span class="text-muted small">@sp.dThanhTien</span></li>
                                <li class="border-bottom my-2"></li>
                                
                             }
                                <li class="d-flex align-items-center justify-content-between"><strong class="text-uppercase small fw-bold">Total</strong><span>@ViewBag.TongTien</span></li>
                            </ul>
                    </div>
                </div>
            </div>
        
    </div>
</section>
