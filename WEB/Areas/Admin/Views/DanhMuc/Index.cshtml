@model IEnumerable<WEB.Models.DANHMUC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDM.cshtml";
}

<h2>Quản lí danh mục</h2>

<a href="@Url.Action("Create","DanhMuc")" class="btn btn-success" role="button">Thêm danh mục</a>
<table class="table">
    <tr>
        <th>
            Tên Danh Mục
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenDanhMuc)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.MaDM })" class="btn btn-warning" role="button">Sửa</a>
            <a href="@Url.Action("Delete", new { id = item.MaDM })" class="btn btn-danger" role="button">Xóa</a>
        </td>
    </tr>
}

</table>
